<table class="table table-hover">
  <thead>
  <tr>
    <th><%= link_to 'Name', breweries_path(order:'name',setdir:true)%></th>
    <th><%= link_to 'Year', breweries_path(order:'year',setdir:true)%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>

  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td><%= link_to 'Edit', edit_brewery_path(brewery),class:"btn btn-primary"  %></td>
        <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>